# Конфигурация базы данных
# Учетные данные и параметры подключения PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=orbis_storage
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Настройки приложения
# Хост и порт для приложения FastAPI
APP_HOST=0.0.0.0
APP_PORT=8000

# Включить режим отладки (true/false)
DEBUG=false

# Настройки файлового хранилища
# Путь, где хранятся загруженные файлы
FILE_STORAGE_PATH=/app/uploads
# Префикс для временных/ожидающих файлов при загрузке
PENDING_FILE_PREFIX=pending_

# Параметры подключения к базе данных
# Количество попыток подключения к базе данных при запуске
DB_RETRIES=5
# Задержка в секундах между повторными попытками подключения к базе данных
DB_RETRY_DELAY=2

# Дополнительно: настройки, которые можно переопределить
# Имя и версия приложения (используются в заголовке FastAPI)
APP_NAME=Orbis File Storage
APP_VERSION=2.0.0