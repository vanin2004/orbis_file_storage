# Database Configuration
# PostgreSQL database credentials and connection settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=orbis_storage
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Application Settings
# Host and port for the FastAPI application
APP_HOST=0.0.0.0
APP_PORT=8000
# External port mapping for Docker (should match APP_PORT unless different mapping needed)
APP_EXTERNAL_PORT=8000
# Enable debug mode (true/false)
DEBUG=false

# File Storage Settings
# Path where uploaded files are stored
FILE_STORAGE_PATH=/app/app/uploads
# Prefix for temporary/pending files during upload
PENDING_FILE_PREFIX=pending_
# Timeout in seconds for file locking operations
LOCK_TIMEOUT=10.0

# Database Connection Settings
# Number of retries for database connection during startup
DB_RETRIES=5
# Delay in seconds between database connection retry attempts
DB_RETRY_DELAY=2

# Optional: Additional settings that can be overridden
# Application name and version (used in FastAPI title)
APP_NAME=Orbis File Storage
APP_VERSION=1.0.0